<p id="notice"><%= notice %></p>

<h1>Listing Estates</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Street</th>
      <th>Number</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>Rooms</th>
      <th>Total construction</th>
      <th>Total area</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= estate.kind %></td>
        <td><%= estate.street %></td>
        <td><%= estate.number %></td>
        <td><%= estate.neighborhood %></td>
        <td><%= estate.city %></td>
        <td><%= estate.rooms %></td>
        <td><%= estate.total_construction %></td>
        <td><%= estate.total_area %></td>
        <td><%= estate.description %></td>
        <td><%= estate.price %></td>
        <td><%= link_to 'Show', estate %></td>
        <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
        <td><%= link_to 'Destroy', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

