<div class="container">

  <%= form_for @estate, html:{ multipart: true} do |f| %>
    <% if @estate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estate.errors.count, "error") %> impedem o Imóvel de ser salvo:</h2>

      <ul>
        <% @estate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <div class="field">
    <%= f.label "Tipo" %>
    <%= f.collection_select( :kind_id, Kind.all, :id, :variety,{ include_blank: "Selecione..." }, { class: "form-control"}) %>
  </div>

  <div class="field">
    <%= f.label "Nome" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Rua" %><br>
    <%= f.text_field :street, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Valor" %><br>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :image0%>
    <%= f.file_field :image0 %>
  </div>
  <div class="field">
    <%= f.label :image1%>
    <%= f.file_field :image1 %>
  </div>
  <div class="field">
    <%= f.label :image2%>
    <%= f.file_field :image2 %>
  </div>
  <div class="field">
    <%= f.label :image3%>
    <%= f.file_field :image3 %>
  </div>
  <div class="field">
    <%= f.label :image4%>
    <%= f.file_field :image4 %>
  </div>
  <div class="field">
    <%= f.label :image5%>
    <%= f.file_field :image5 %>
  </div>
  <div class="field">
    <%= f.label "Descrição" %> <br>
    <%= f.text_area :description, rows: "5", class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <div class="col-lg-12">
      <div class="col-lg-6">
        <p><%= link_to 'Cancelar', estates_path, class: "form-control btn btn-danger" %></p>
      </div>
      <div class="col-lg-6">
        <%= f.submit "Criar", class: "form-control btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
  <br>
</div>
